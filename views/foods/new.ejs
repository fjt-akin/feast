<%- include("../partials/header") %>
<div class="row">
	<div class="col-12">
		<h1 class="text-center">Upload New Meal</h1>
	<div style="width: 30%; margin: 25px auto;">
		<form action="/foods" method="POST" enctype="multipart/form-data">
			<div class="form-group">
              <input type="text" class="form-control" name="food[name]" placeholder="Name">
            </div>
			<div class="form-group">
              <input type="number" class="form-control" name="food[price]" placeholder="Price" min="0.01" step="0.01"
					 required> 
            </div>
			<div class="form-group">
                <label for="image">Image:</label>
                <input type="file" class="form-control" id="image" name="image" accept="image/*" required>
            </div>
			<div class="form-group">
              <input type="text" class="form-control" name="food[description]" placeholder="Description"> 
            </div>
			<div class="form-group">
              <button class="btn btn-success btn-large btn-block">Submit</button>
            </div>
		</form>
		<a href="/foods">Go back</a>
		
	</div>
	
	</div>
	
	



<%- include("../partials/footer") %>