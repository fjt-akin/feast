<%- include("../partials/header") %>
<div class="row">
	<div class="col-12">
		<h1 class="text-center">Edit <%= food.name %></h1>
	<div style="width: 30%; margin: 25px auto;">
		<form action="/foods/<%= food._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
			<div class="form-group">
              <input type="text" class="form-control" name="name" value=" <%= food.name %>">
            </div>
			<div class="form-group">
              <input type="number" class="form-control" name="price" value=" <%= food.price %>" min="0.01" step="0.01"
					 required> 
            </div>
			<div class="form-group">
                <label for="image">Image:</label>
                <input type="file" class="form-control" id="image" name="image" value=" <%= food.image %>" accept="image/*" required>
            </div>
			<div class="form-group">
              <input type="text" class="form-control" name="description" value=" <%= food.description %>"> 
            </div>
			<div class="form-group">
              <button class="btn btn-success btn-large btn-block">Submit</button>
            </div>
		</form>
		<a href="/foods">Go back</a>
		
	</div>
	
	</div>
	
	



<%- include("../partials/footer") %>