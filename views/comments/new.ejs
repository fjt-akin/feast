<%- include("../partials/header") %>

<div class="row">
	<div class="col-12">
		<h1 class="text-center">Add New Comment to <%= food.name %></h1>
		<div style="width: 30%; margin: 25px auto">
			<form action="/foods/<%= food._id %>/comments" method="POST">
				<div class="form-group">
					<input type="text" class="form-control" name="comment[text]" placeholder="comment here">
				</div>
				<div class="form-group">
					<input type="submit" class="btn btn-primary btn-block btn-large" value="Submit!">
				</div>
			</form>
			<a href="/foods">Go back</a>
			
		</div>
	</div>
</div>



<%- include("../partials/footer") %>