<%- include("partials/header") %> 

<div class="row">
	<div class="col-12">
		<div style="max-width: 300px; margin:60px auto">
		<h1 class="text-center text-danger font-weight-bold mb-4">Sign In</h1>
		<form action="/login" method="POST">
			<div class="form-group">
			<input type="text" class="form-control" name="username" placeholder="username">
        </div>
		<div class="form-group">
			<input type="password" class="form-control" name="password" placeholder="password">
        </div>
		<div class="form-group">
			<input type="submit" class="btn btn-info btn-block" value="login!">
        </div>
		</form>
		<div class="text-center">
			<a class="lead" href="/forgot">Forgotten password?</a>
		</div>
		</div>
    </div>
</div>



